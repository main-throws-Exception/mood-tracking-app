<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".ui.settings.ColorSettingsFragment">


    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/fragment_color_settings__color_scheme_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/color_scheme_title"
            android:textColor="@color/teal_200"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/fragment_color_settings__very_happy_color"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/mood_good_bg_solid"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/fragment_color_settings__happy_color"
            app:layout_constraintTop_toBottomOf="@id/fragment_color_settings__color_scheme_title"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/fragment_color_settings__happy_color"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/mood_good_bg_solid"
            app:layout_constraintLeft_toRightOf="@id/fragment_color_settings__very_happy_color"
            app:layout_constraintRight_toLeftOf="@id/fragment_color_settings__neutral_color"
            app:layout_constraintTop_toBottomOf="@id/fragment_color_settings__color_scheme_title"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/fragment_color_settings__neutral_color"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/mood_good_bg_solid"
            app:layout_constraintLeft_toRightOf="@id/fragment_color_settings__happy_color"
            app:layout_constraintRight_toLeftOf="@id/fragment_color_settings__bad_color"
            app:layout_constraintTop_toBottomOf="@id/fragment_color_settings__color_scheme_title"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/fragment_color_settings__bad_color"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/mood_good_bg_solid"
            app:layout_constraintLeft_toRightOf="@id/fragment_color_settings__neutral_color"
            app:layout_constraintRight_toLeftOf="@id/fragment_color_settings__very_bad_color"
            app:layout_constraintTop_toBottomOf="@id/fragment_color_settings__color_scheme_title"
            tools:ignore="ContentDescription" />

        <ImageButton
            android:id="@+id/fragment_color_settings__very_bad_color"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:background="@drawable/mood_good_bg_solid"
            app:layout_constraintLeft_toRightOf="@id/fragment_color_settings__bad_color"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_color_settings__color_scheme_title"
            tools:ignore="ContentDescription" />



        <ImageView
            android:id="@+id/fragment_color_settings__very_happy_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/ic_very_happy_emoji"
            app:layout_constraintLeft_toLeftOf="@id/fragment_color_settings__very_happy_color"
            app:layout_constraintRight_toRightOf="@id/fragment_color_settings__very_happy_color"
            app:layout_constraintTop_toBottomOf="@id/fragment_color_settings__very_happy_color"
            android:contentDescription="@string/emoji" />

        <ImageView
            android:id="@+id/fragment_color_settings__happy_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/ic_happy_emoji"
            app:layout_constraintLeft_toLeftOf="@id/fragment_color_settings__happy_color"
            app:layout_constraintRight_toRightOf="@id/fragment_color_settings__happy_color"
            app:layout_constraintTop_toBottomOf="@id/fragment_color_settings__happy_color"
            android:contentDescription="@string/emoji" />

        <ImageView
            android:id="@+id/fragment_color_settings__neutral_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/ic_neutral_emoji"
            app:layout_constraintLeft_toLeftOf="@id/fragment_color_settings__neutral_color"
            app:layout_constraintRight_toRightOf="@id/fragment_color_settings__neutral_color"
            app:layout_constraintTop_toBottomOf="@id/fragment_color_settings__neutral_color"
            android:contentDescription="@string/emoji" />

        <ImageView
            android:id="@+id/fragment_color_settings__sad_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/ic_sad_emoji"
            app:layout_constraintLeft_toLeftOf="@id/fragment_color_settings__bad_color"
            app:layout_constraintRight_toRightOf="@id/fragment_color_settings__bad_color"
            app:layout_constraintTop_toBottomOf="@id/fragment_color_settings__bad_color"
            android:contentDescription="@string/emoji" />

        <ImageView
            android:id="@+id/fragment_color_settings__very_sad_emoji"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/ic_very_sad_emoji"
            app:layout_constraintLeft_toLeftOf="@id/fragment_color_settings__very_bad_color"
            app:layout_constraintRight_toRightOf="@id/fragment_color_settings__very_bad_color"
            app:layout_constraintTop_toBottomOf="@id/fragment_color_settings__very_bad_color"
            android:contentDescription="@string/emoji" />

        <FrameLayout
            android:id="@+id/fragment_color_settings__current_color_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_color_settings__very_happy_emoji">

            <include
                layout="@layout/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

        </FrameLayout>



        <TextView
            android:id="@+id/fragment_color_settings__saved_color_presets_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/saved_color_presets_title"
            android:textColor="@color/teal_200"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_color_settings__current_color_divider" />

        <LinearLayout
            android:id="@+id/fragment_color_settings__saved_color_presets_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_color_settings__saved_color_presets_title" />

        <FrameLayout
            android:id="@+id/fragment_color_settings__saved_color_presets_divider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_color_settings__saved_color_presets_layout">

            <include
                layout="@layout/divider"
                android:layout_width="match_parent"
                android:layout_height="1dp" />

        </FrameLayout>

        <TextView
            android:id="@+id/fragment_color_settings__color_presets_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:text="@string/color_presets_title"
            android:textColor="@color/teal_200"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_color_settings__saved_color_presets_divider" />

        <LinearLayout
            android:id="@+id/fragment_color_settings__color_presets_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@id/fragment_color_settings__saved_color_presets_title" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</FrameLayout>
