<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    tools:context=".screen.settings.ColorGroupFragment">

    <!-- TODO: Update blank fragment layout -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/color_group_border"
        android:orientation="horizontal">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/fragment_color_group__color_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/color_group_border"
            android:padding="10dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/fragment_color_group__check"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/fragment_color_group__very_bad_color"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/mood_good_bg_solid"
                android:padding="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toLeftOf="@id/fragment_color_group__bad_color"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/fragment_color_group__bad_color"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/mood_good_bg_solid"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/fragment_color_group__very_bad_color"
                app:layout_constraintRight_toLeftOf="@id/fragment_color_group__neutral_color"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/fragment_color_group__neutral_color"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/mood_good_bg_solid"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/fragment_color_group__bad_color"
                app:layout_constraintRight_toLeftOf="@id/fragment_color_group__good_color"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/fragment_color_group__good_color"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/mood_good_bg_solid"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/fragment_color_group__neutral_color"
                app:layout_constraintRight_toLeftOf="@id/fragment_color_group__very_good_color"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

            <ImageView
                android:id="@+id/fragment_color_group__very_good_color"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:background="@drawable/mood_good_bg_solid"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toRightOf="@id/fragment_color_group__good_color"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:ignore="ContentDescription" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ImageButton
            android:id="@+id/fragment_color_group__check"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="10dp"
            android:background="@drawable/round_button_background"
            android:src="@drawable/ic_check"
            app:layout_constraintLeft_toRightOf="@id/fragment_color_group__color_layout"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:contentDescription="@string/tick" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</FrameLayout>
