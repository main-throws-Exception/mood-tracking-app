<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/fragment_entry__layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_background"
    tools:context=".ui.entry.EntryFragment"
    >

    <include
        android:id="@+id/fragment_entry__mood_state"
        layout="@layout/mood_state"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <include
        android:id="@+id/entry__title_linear_layout"
        layout="@layout/fragment_entry__title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fragment_entry__mood_state"
        />

    <include
        android:id="@+id/entry__mood_slider"
        layout="@layout/mood_slider"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/entry__title_linear_layout"
        />

    <include
        android:id="@+id/entry__title_linear_layout2"
        layout="@layout/fragment_entry__title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/entry__mood_slider"
        />

    <include
        android:id="@+id/entry__tag_section"
        layout="@layout/tag_section"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/entry__title_linear_layout2"
        />

    <include
        android:id="@+id/entry__title_linear_layout3"
        layout="@layout/fragment_entry__title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginHorizontal="20dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/entry__tag_section"
        />

    <EditText
        android:id="@+id/entry__note_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        tools:text="Add new note..."
        android:text="Add new note..."
        android:paddingHorizontal="15dp"
        android:paddingVertical="10dp"
        android:background="@drawable/input_note"
        android:alpha="0.4"
        android:layout_marginHorizontal="20dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/entry__title_linear_layout3"
        tools:ignore="HardcodedText,LabelFor"
        android:autofillHints="tags" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/ic_check_mark_button"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintTop_toBottomOf="@id/entry__note_input"
        app:layout_constraintEnd_toEndOf="parent"
        android:contentDescription="@string/tick" />

</androidx.constraintlayout.widget.ConstraintLayout>
